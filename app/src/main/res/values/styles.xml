<resources>
    <!-- Define un estilo personalizado para botones con bordes redondeados -->
    <style name="RoundedButtonStyle" parent="Widget.AppCompat.Button">
        <!-- Asigna el drawable personalizado como fondo -->
        <item name="android:background">@drawable/roundedbutton</item>
        <!-- Desactiva el tinting del fondo -->
        <item name="android:backgroundTint">@null</item>
        <!-- Puedes configurar otras propiedades, como padding, texto, etc. -->
        <item name="android:textColor">#000000</item>
    </style>
